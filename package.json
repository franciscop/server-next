{
  "name": "@server/next",
  "version": "0.27.5",
  "description": "A fully-fledged web server with routing, file uploads, sessions, static files, schema validation, websockets, testing, etc.",
  "homepage": "https://server-js.com/",
  "repository": "https://github.com/franciscop/server-next.git",
  "bugs": "https://github.com/franciscop/server-next/issues",
  "funding": "https://www.paypal.me/franciscopresencia/19",
  "author": "Francisco Presencia <public@francisco.io> (https://francisco.io/)",
  "license": "UNLICENSED",
  "documentation": {
    "title": "Server JS - A modern web server for Bun and Node.js",
    "home": "./docs/index.html",
    "menu": {
      "Documentation": "/documentation",
      "Github": "https://github.com/franciscop/server-next"
    }
  },
  "scripts": {
    "build": "bunx tsup src/index.ts --format esm --dts --out-dir . --target node24",
    "start": "bun test --watch",
    "lint": "npx @biomejs/biome lint ./src --skip=lint/suspicious/noExplicitAny --skip=lint/style/noParameterAssign  --skip=lint/suspicious/noConfusingVoidType",
    "types": "npx tsc --noEmit",
    "test": "npm run test:bun && tsc --noEmit",
    "test:bun": "bun test",
    "test:jest": "node --experimental-vm-modules node_modules/jest/bin/jest.js"
  },
  "keywords": [
    "server",
    "node",
    "server.js"
  ],
  "type": "module",
  "main": "index.js",
  "types": "index.d.ts",
  "files": [
    "index.d.ts",
    "src/jsx/"
  ],
  "exports": {
    ".": "./index.js",
    "./index.d.ts": "./index.d.ts",
    "./jsx-runtime": "./src/jsx/jsx-runtime.js",
    "./jsx-dev-runtime": "./src/jsx/jsx-dev-runtime.js"
  },
  "devDependencies": {
    "@types/bun": "^1.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.0",
    "check-dts": "^0.8.2",
    "jest": "^29.7.0",
    "polystore": "^0.14.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=24.11.0"
  },
  "engineStrict": true,
  "jest": {
    "testEnvironment": "jest-environment-node",
    "transform": {}
  }
}
