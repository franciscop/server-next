    "server",
    "node",
    "server.js"
  ],
  "type": "module",
  "main": "src/index.js",
  "types": "src/index.d.ts",
  "files": [
    "src/",
    "jsx-dev-runtime.js"
  ],
  "devDependencies": {
    "argon2": "^0.40.3",
    "check-dts": "^0.8.2",
    "jest": "^29.7.0",
    "polystore": "^0.14.1"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "engineStrict": true,
  "jest": {
    "testEnvironment": "jest-environment-node",
    "transform": {}
  }
