{
  "compilerOptions": {
    "declaration": true,
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "ES2021", "DOM"],
    "outDir": "dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["jest", "bun", "node"],
    "typeRoots": ["./node_modules/@types", "./src/test"]
  },
  "include": ["src/**/*"]
}
